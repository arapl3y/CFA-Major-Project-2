<div class="padded-table">
  <table class="table table-borderless">
    <thead>
      <tr>
        <th>#</th>
        <th>Uploaded</th>
        <th>Status</th>
        <th>Requesters</th>
        <th>Approve</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
      <tr>

        <th scope="row"><%= item.id %></th>
        <td><%= link_to item.title, item_path(item) %></td>


        <% if item.item_requests.any? %>
        <td>Requested</td>

        <td>
        <%= form_for request_item_path(item) do |f| %>
          <%= f.select "item_requesters", options_for_select(item.requesters.map {|requester| requester.username }), class: 'form-control' %>
        </td>

      <td>
          <%= f.submit 'Approve', class: 'btn btn-success' %>
        <% end %> <!-- end form -->
      </td>
      <% else %>
      <td>Posted</td>
      <% end %> <!-- end if statement -->
    </tr>
    <% end %> <!-- end loop -->
  </tbody>
</table>
</div>



