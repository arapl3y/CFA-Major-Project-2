<div class="padded-table">
<table class="table table-borderless">
  <thead>
    <tr>
      <th>#</th>
      <th>Requested</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>

    <% current_user.requested_items.each do |item| %>
      <tr>
      <%# if item.requested_items %>
        <th scope="row"><%= item.id %></th>
        <td><%= link_to item.title, item_path(item) %></td>
          <td>Requested</td>
      <%# end %>
      </tr>
      <tr>
    <% end %>
   </tbody>
 </table>
</div>
