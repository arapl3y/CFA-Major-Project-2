<div class="padded-table">
<table class="table table-borderless">
  <thead>
    <tr>
      <th>#</th>
      <th>Uploaded</th>
      <th>Status</th>
      <th>Approved?</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>

    <% if item.user == current_user %>
      <th scope="row"><%= item.id %></th>
      <td><%= link_to item.title, item_path(item) %></td>
      <% if item.requested %>
        <td>Requested</td>
      <% else %>
        <td>Pending</td>
      <% end %>
      <td><%= link_to 'Approve', '#', class: 'btn btn-success' %></td>
    <% end %>

    </tr>
    <% end %>
   </tbody>
 </table>
</div>
