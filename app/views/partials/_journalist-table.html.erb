<div class="padded-table">
<table class="table table-borderless">
  <thead>
    <tr>
      <th>#</th>
      <th>Requested</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
  <% @items.each do |item| %>
    <tr>
      <th scope="row"><%= item.id %></th>
      <td><%= link_to item.title, item_path(item) %></td>
      <% if item.requested %>
      <!-- And approved -->
        <td>Approved</td>
      <% else %>
        <td>Requested</td>
      <% end %>
    </tr>
    <tr>
    <% end %>
   </tbody>
 </table>
</div>
