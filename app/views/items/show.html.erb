<div class="jumbotron">
  <div class="row">
    <%= link_to icon('times'), items_path, class: 'close-btn' %>
  </div>

  <div class="row">

    <% if @item.document.content_type == "image/jpeg" %>
      <%= image_tag @item.document.url, class: 'img-responsive' %>
    <% else %>
      <p><%= @item.document.original_filename %></p>
    <% end %>

    <br>

    <%= link_to 'Request', request_item_path(@item), method: :put %>

    <a href="<%= asset_path @item.document.url %>" class="btn btn-success" download>Download</a>



    <h1><%= @item.title %></h1>
    <p><%= @item.description %></p>
    <p>Uploaded by: <b><%= @item.user.username %></b></p>
    <p><%= @item.created_at.to_date %></p>


    <% if @item.user == current_user %>
      <%= link_to 'Edit', edit_item_path(@item), class: 'btn btn-primary' %>
      <%= link_to 'Delete', item_path(@item), method: :delete, data: { confirm: 'Are you sure? '}, class: 'btn btn-danger' %>
    <% end %>
</div>

